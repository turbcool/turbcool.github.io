<h3 class="ui header">{{t 'forms.b-g-operation-e.caption'}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=model.errors}}
    </div>
  </div>
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button type="submit" class="ui button save-button" {{action 'save'}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button type="submit" class="ui button save-del-button" {{action 'delete'}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button type="submit" class="ui button close-button" {{action 'close'}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field">
  {{
    flexberry-field
    placeholder=(t 'components.flexberry-field.placeholder')
    readonly=readonly
    required=true
    value=model.order
    class=(if model.errors.order 'error' '')
    label=(t 'forms.b-g-operation-e.order-caption')
  }}
  {{flexberry-validationmessage error=model.errors.order pointing="pointing"}}
</div>

<div class="field">
  {{
    flexberry-field
    placeholder=(t 'components.flexberry-field.placeholder')
    readonly=readonly
    required=true
    value=model.formula
    class=(if model.errors.formula 'error' '')
    label=(t 'forms.b-g-operation-e.formula-caption')
  }}
  {{flexberry-validationmessage error=model.errors.formula pointing="pointing"}}
</div>

<div class="field">
  <label>{{t 'forms.b-g-operation-e.process-caption'}}</label>
  {{
    flexberry-lookup
    choose='showLookupDialog'
    remove='removeLookupValue'
    value=model.process
    displayAttributeName='name'
    autocomplete=true
    relationName='process'
    projection='ProcessL'
    title=(t 'forms.b-g-operation-e.process-caption')
    readonly=readonly
    componentName="processLookup"
  }}
  {{flexberry-validationmessage error=model.errors.process pointing="pointing"}}
</div>

<div class="field">
  {{
    flexberry-field
    placeholder=(t 'components.flexberry-field.placeholder')
    readonly=true
    required=true
    value=model.process.name
    class=(if model.errors.process.name 'error' '')
    label=(t 'forms.b-g-operation-e.process.name-caption')
  }}
  {{flexberry-validationmessage error=model.errors.process.name pointing="pointing"}}
</div>

</form>
