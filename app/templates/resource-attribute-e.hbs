<h3 class="ui header">{{t 'forms.resource-attribute-e.caption'}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=model.errors}}
    </div>
  </div>
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button type="submit" class="ui button save-button" {{action 'save'}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button type="submit" class="ui button save-del-button" {{action 'delete'}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button type="submit" class="ui button close-button" {{action 'close'}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field">
  {{
    flexberry-field
    placeholder=(t 'components.flexberry-field.placeholder')
    readonly=readonly
    required=true
    value=model.name
    class=(if model.errors.name 'error' '')
    label=(t 'forms.resource-attribute-e.name-caption')
  }}
  {{flexberry-validationmessage error=model.errors.name pointing="pointing"}}
</div>

<div class="field">
  {{
    flexberry-field
    placeholder=(t 'components.flexberry-field.placeholder')
    readonly=readonly
    required=true
    value=model.amount
    class=(if model.errors.amount 'error' '')
    label=(t 'forms.resource-attribute-e.amount-caption')
  }}
  {{flexberry-validationmessage error=model.errors.amount pointing="pointing"}}
</div>

<div class="field">
  <label>{{t 'forms.resource-attribute-e.resource-caption'}}</label>
  {{
    flexberry-lookup
    choose='showLookupDialog'
    remove='removeLookupValue'
    value=model.resource
    displayAttributeName='name'
    autocomplete=true
    relationName='resource'
    projection='ResourceL'
    title=(t 'forms.resource-attribute-e.resource-caption')
    readonly=readonly
    componentName="resourceLookup"
  }}
  {{flexberry-validationmessage error=model.errors.resource pointing="pointing"}}
</div>

<div class="field">
  {{
    flexberry-field
    placeholder=(t 'components.flexberry-field.placeholder')
    readonly=true
    required=true
    value=model.resource.name
    class=(if model.errors.resource.name 'error' '')
    label=(t 'forms.resource-attribute-e.resource.name-caption')
  }}
  {{flexberry-validationmessage error=model.errors.resource.name pointing="pointing"}}
</div>

<div class="field">
  {{
    flexberry-field
    placeholder=(t 'components.flexberry-field.placeholder')
    readonly=true
    required=true
    value=model.resource.amount
    class=(if model.errors.resource.amount 'error' '')
    label=(t 'forms.resource-attribute-e.resource.amount-caption')
  }}
  {{flexberry-validationmessage error=model.errors.resource.amount pointing="pointing"}}
</div>

</form>
