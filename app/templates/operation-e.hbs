<h3 class="ui header">{{t 'forms.operation-e.caption'}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=model.errors}}
    </div>
  </div>
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button type="submit" class="ui button save-button" {{action 'save'}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button type="submit" class="ui button save-del-button" {{action 'delete'}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button type="submit" class="ui button close-button" {{action 'close'}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field">
  {{
    flexberry-field
    placeholder=(t 'components.flexberry-field.placeholder')
    readonly=readonly
    required=true
    value=model.name
    class=(if model.errors.name 'error' '')
    label=(t 'forms.operation-e.name-caption')
  }}
  {{flexberry-validationmessage error=model.errors.name pointing="pointing"}}
</div>

<div class="field">
  <label>{{t 'forms.operation-e.duration-caption'}}</label>
  {{
    flexberry-datepicker
    placeholder=(t 'components.flexberry-datepicker.placeholder')
    readonly=readonly
    value=model.duration
    class=(if model.errors.duration 'error' '')
  }}
  {{flexberry-validationmessage error=model.errors.duration pointing="pointing"}}
</div>

<div class="field">
  <label>{{t 'forms.operation-e.businessProcess-caption'}}</label>
  {{
    flexberry-lookup
    choose='showLookupDialog'
    remove='removeLookupValue'
    value=model.businessProcess
    displayAttributeName='name'
    autocomplete=true
    relationName='businessProcess'
    projection='BusinessProcessL'
    title=(t 'forms.operation-e.businessProcess-caption')
    readonly=readonly
    componentName="businessProcessLookup"
  }}
  {{flexberry-validationmessage error=model.errors.businessProcess pointing="pointing"}}
</div>

<div class="field">
  {{
    flexberry-field
    placeholder=(t 'components.flexberry-field.placeholder')
    readonly=true
    required=true
    value=model.businessProcess.name
    class=(if model.errors.businessProcess.name 'error' '')
    label=(t 'forms.operation-e.businessProcess.name-caption')
  }}
  {{flexberry-validationmessage error=model.errors.businessProcess.name pointing="pointing"}}
</div>

</form>
