<h3 class="ui header">{{t 'forms.b-g-resource-process-e.caption'}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=model.errors}}
    </div>
  </div>
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button type="submit" class="ui button save-button" {{action 'save'}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button type="submit" class="ui button save-del-button" {{action 'delete'}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button type="submit" class="ui button close-button" {{action 'close'}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field">
  <label>{{t 'forms.b-g-resource-process-e.process-caption'}}</label>
  {{
    flexberry-lookup
    choose='showLookupDialog'
    remove='removeLookupValue'
    value=model.process
    
    relationName='process'
    projection='ProcessL'
    title=(t 'forms.b-g-resource-process-e.process-caption')
    readonly=readonly
    componentName="processLookup"
  }}
  {{flexberry-validationmessage error=model.errors.process pointing="pointing"}}
</div>

<div class="field">
  {{
    flexberry-field
    placeholder=(t 'components.flexberry-field.placeholder')
    readonly=true
    required=true
    value=model.process.code
    class=(if model.errors.process.code 'error' '')
    label=(t 'forms.b-g-resource-process-e.process.code-caption')
  }}
  {{flexberry-validationmessage error=model.errors.process.code pointing="pointing"}}
</div>

<div class="field">
  <label>{{t 'forms.b-g-resource-process-e.resource-caption'}}</label>
  {{
    flexberry-lookup
    choose='showLookupDialog'
    remove='removeLookupValue'
    value=model.resource
    
    relationName='resource'
    projection='ResourceL'
    title=(t 'forms.b-g-resource-process-e.resource-caption')
    readonly=readonly
    componentName="resourceLookup"
  }}
  {{flexberry-validationmessage error=model.errors.resource pointing="pointing"}}
</div>

<div class="field">
  {{
    flexberry-field
    placeholder=(t 'components.flexberry-field.placeholder')
    readonly=true
    required=true
    value=model.resource.code
    class=(if model.errors.resource.code 'error' '')
    label=(t 'forms.b-g-resource-process-e.resource.code-caption')
  }}
  {{flexberry-validationmessage error=model.errors.resource.code pointing="pointing"}}
</div>

</form>
