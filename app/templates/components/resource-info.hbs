<div class="ui card">
    <div class="content">
        <a id={{resource.id}} class="header">{{resourceType.name}}</a>
        <div class="description">
            {{resource.name}}

            {{#each resAttrs as |attr|}}
            <p>{{attr.name}}</p>
            {{#if showAmount }} <p>{{attr.amount}}</p>{{/if}}
            {{/each}}
        </div>
    </div>
</div>